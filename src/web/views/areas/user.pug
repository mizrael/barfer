extends ../layout

block content
  div(class="user-details jsUserDetails")
  
    div(class="row")
        div(class="leftCol col-md-3 col-xs-12")
            div(class="head")
                img(src=model.picture, title=model.nickName, alt=model.nickName)
                h3 @#{model.nickname}
                button(class="btn btn-sm follow jsFollow", data-id=model.userId, data-followed=model.followed ? 'true' : 'false') Follow

            div(class="topUsers jsTopUsers")  

        div(class="main col-md-9 col-xs-12")
            if user && barfs
                div(class="barfs jsUserBarfs")
                    include ../partials/_barfs