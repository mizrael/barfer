extends ../layout

block content
  div(class="user-details jsUserDetails")
  
    div(class="row")
        div(class="leftCol col-md-3 col-xs-12")
            div(class="head")
                img(src=model.picture, title=model.nickName, alt=model.nickName)
                p
                    h3 @#{model.nickname}
                    button(class="btn btn-sm follow jsFollow", data-id=model.userId, data-followed=model.followed ? 'true' : 'false') Follow
                p
                    ul.stats
                        li
                            span.stat-type Barfs
                            span.stat-value #{model.barfsCount}
                        li
                            span.stat-type Following
                            span.stat-value #{model.followsCount}
                        li
                            span.stat-type Followers
                            span.stat-value #{model.followersCount}


            div(class="topUsers" widget-tag-cloud)
            div(class="topUsers" widget-users="top")
            div(class="topUsers" widget-users="latest")  

        div(class="main col-md-9 col-xs-12")
            if user && barfs
                div(class="barfs jsUserBarfs")
                    include ../partials/_barfs