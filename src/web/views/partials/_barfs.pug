if !barfs.totalCount
    h3 no barfs yet, follow somebody!
else
  div found #{barfs.totalCount} barfs, showing page #{barfs.page + 1} of #{barfs.totalPages}
  div(class="card-columns")
    each item in barfs.items
        div(class="card")
          blockquote(class="blockquote mb-0 card-body")
            p #{item.text}
            footer(class="blockquote-footer")
              small(class="text-muted") 
                if(item.picture) 
                  img(src=item.picture, title=item.userName, alt=item.userName, style="width:20px")
                span #{item.userName}